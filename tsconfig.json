{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es7", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "store": ["src/store"],
      "sagas": ["src/sagas"],
      "reducers": ["src/reducers"],
      "actions/*": ["src/actions/*"],
      "components/*": ["src/components/*"],
      "containers/*": ["src/containers/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
